%h2.mb-3 Users

%table.table
  %thead
    %th Email
    %th First Name
    %th Last Name
    %th Role
    %th{colspan: 3}

  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.first_name
        %td= user.last_name
        %td= user.role
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }

